<h2>All orders</h2>


  <% @orders_all.each do |row| %>

      <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Title</th>
          <th scope="col">Price</th>
          <th scope="col">Quantity</th>
          <th scope="col">Name</th>
          <th scope="col">Phone</th>
          <th scope="col">Address</th>
        </tr>
      </thead>
    
      <%s = row.orders_input.gsub(/product_|=|,/, ' ')%>
      <%@orders = Hash[*s.split(' ')] %>

      <tbody>
      		<%i = 1%>
          <%total_price = 0%>
      	  	<% @orders.each do |key,value| %>
              <tr>
    		  	  	<th scope="row"><%=i%></th>
        				<td> <%= Product.find_by(id: key).title %> </td>
                <td> <%= Product.find_by(id: key).price %> </td>
        				<td> <%= value%> </td>
                <td> <%= row.name%> </td>
                <td> <%= row.phone%> </td>
                <td> <%= row.address%> </td>
        			</tr>
    			    <%i += 1%>
              <%total_price += Product.find_by(id: key).price * value.to_i%>
        		<%end%>
              <tr>
                <th></th>
                <td></td>
                <td> Total price: <%= total_price %> rub</td>
                <td></td>
              </tr>

      </tbody>
    <%end%>
</table>